[Unit]
Description=speederv2
Documentation=speederv2
After=network.target

[Service]
Type=simple
PermissionsStartOnly=true
CapabilityBoundingSet=CAP_NET_BIND_SERVICE
ExecStart=/usr/local/bin/speederv2 --conf-file /etc/speederv2/speederv2.conf
Restart=on-failure
User=nobody
StandardOutput=syslog
StandardError=syslog
SyslogIdentifier=speederv2

[Install]
WantedBy=multi-user.target
